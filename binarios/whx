#!/bin/zsh

if [ $# -ne 1 ]; then
  echo "Uso: $0 <comando>"
  exit 1
fi

comando="$1"

# Busca la ubicaci贸n del comando binario
ruta_comando=$(which "$comando")

if [ -z "$ruta_comando" ]; then
  echo "El comando '$comando' no se encontr贸 en el sistema."
  exit 1
fi

# Muestra la ubicaci贸n del comando binario
echo "Ubicaci贸n de $comando:"
echo "$ruta_comando"

# Muestra el contenido del archivo binario
cat "$ruta_comando"

echo "$ruta_comando" | xclip -selection c

echo "ruta copia a la papelera"